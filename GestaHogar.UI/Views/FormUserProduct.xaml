<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaHogar.UI.FormUserProduct"
             Title="Producto de usuario">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding ProductName}" FontAttributes="Bold" FontSize="22" />
            <Label Text="{Binding Category}" FontAttributes="Italic" FontSize="16" />

            <Label Text="Stock normal:" />
            <Entry Text="{Binding NormalStock.Value}" Keyboard="Numeric" />

            <Label Text="Stock actual:" />
            <Entry Text="{Binding CurrentStock.Value}" Keyboard="Numeric" />

            <Label Text="Uso diario:" />
            <Entry Text="{Binding DailyUse.Value}" Keyboard="Numeric" />

            <Label Text="Unidad:" />
            <Label Text="{Binding Unit}" />

            <Button Text="Guardar" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>